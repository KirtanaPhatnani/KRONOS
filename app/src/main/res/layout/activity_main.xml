<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#275EAA"
    tools:context="com.example.kirtanaphatnani.kronos.MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:text="Sign up"
        android:id="@+id/bt1_signUp"
        android:background="#84AAF1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:text="Login"
    android:id="@+id/bt1_Login"
    android:background="#84AAF1"
    android:padding="5sp"
        android:layout_below="@+id/bt1_signUp"
        android:layout_alignLeft="@+id/bt1_signUp"
        android:layout_alignStart="@+id/bt1_signUp"
        android:layout_marginTop="42dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="KRONOS"
        android:textColor="#FFFFFF"
        android:textSize="55sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="140sp"
        />

</RelativeLayout>
